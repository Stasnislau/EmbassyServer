generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id                          Int                           @id @default(autoincrement())
  name                        String
  surname                     String
  email                       String                        @unique
  dateOfBirth                 String
  phoneNumber                 String
  address                     String
  city                        String
  country                     String
  zipCode                     String
  passportNumber              String
  passportExpirationDate      String
  passportIssuingCountry      String
  residencePermitApplications residencePermitApplications[]
  visaApplications            visaApplications[]
  visits                      visits[]
  credentials                 credentials[]
}

model residencePermitApplications {
  id                     Int    @id @default(autoincrement())
  name                   String
  surname                String
  email                  String
  phoneNumber            String
  birthDate              String
  birthPlace             String
  address                String
  city                   String
  country                String
  zipCode                String
  residencePermitType    String
  passportNumber         String
  passportIssuingCountry String
  passportExpirationDate String
  passportIssuingDate    String
  comments               String
  userId                 Int
  user                   users  @relation(fields: [userId], references: [id])
  status                 String
}

model visaApplications {
  id                     Int    @id @default(autoincrement())
  name                   String
  surname                String
  email                  String
  phone                  String
  address                String
  city                   String
  state                  String
  zip                    String
  country                String
  passportNumber         String
  passportExpirationDate String
  passportIssuingCountry String
  visaType               String
  visaDuration           String
  visaDate               String
  comments               String
  userId                 Int
  user                   users  @relation(fields: [userId], references: [id])
  status                 String
}

model visits {
  id          Int    @id @default(autoincrement())
  date        String
  time        String
  location    String
  description String
  userId      Int
  user        users  @relation(fields: [userId], references: [id])
}

model credentials {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  userId   Int
  user     users  @relation(fields: [userId], references: [id])
}
